{{- if and .os.linux (ne .chezmoi.username "root") -}}
#!/bin/sh

{{ $services := list
     (ternary
      "ssh-agent.socket"
      "ssh-agent.service"
      (includeTemplate "useSocketActivation" | eq "true"))
-}}

{{ range $services -}}
systemctl --user enable --now {{ . }}
{{ end -}}

{{- end -}}

{{- if .os.darwin -}}
#!/bin/sh

{{ $services := list
     "com.openssh.ssh-agent"
-}}

{{ range $services -}}
launchctl enable gui/$(id -u)/com.openssh.ssh-agent
{{ end -}}

{{- end -}}
