[user]
	name = John Drouhard
	email = john@drouhard.dev
[color]
	ui = true
[color "decorate"]
	head = cyan reverse
	branch = green reverse
	tag = yellow reverse
[http]
	postBuffer = 524288000
[diff]
	tool = nvimdiff
	guitool = meld
[difftool "nvimdiff"]
	cmd = nvim -d $LOCAL $REMOTE
[merge]
	tool = fugitive
[mergetool "fugitive"]
	;cmd = nvim -f "$MERGED" -S "$HOME/.config/nvim/diff.vim"
	cmd = nvim -f -c "Gvdiffsplit!" "$MERGED"
[difftool]
	prompt = false
[alias]
	l = log --graph --all --pretty=format:'%C(auto)%h%d %s %C(green)(%ar)%Creset %C(blue)<%an>%Creset' --abbrev-commit --date=relative
[core]
	autocrlf = false
	quotepath = false
