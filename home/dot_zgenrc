# vim:ft=zsh

export DISABLE_AUTO_TITLE="true"
source ~/.local/share/zgen/zgen.zsh

if ! zgen saved; then

    # Miscellaneous non oh-my-zsh plugins
    zgen load mafredri/zsh-async . main
    zgen load tinted-theming/base16-shell . main
    #zgen load supercrabtree/k

    zgen load zsh-users/zsh-syntax-highlighting
    zgen load zsh-users/zsh-history-substring-search
    zgen load zsh-users/zsh-completions src

    zgen oh-my-zsh

    # Load some oh-my-zsh plugins
    zgen oh-my-zsh plugins/colored-man-pages
    zgen oh-my-zsh plugins/git
    #zgen oh-my-zsh plugins/github
    zgen oh-my-zsh plugins/pip
    zgen oh-my-zsh plugins/python
    #zgen oh-my-zsh plugins/rsync
    zgen oh-my-zsh plugins/sudo
    zgen oh-my-zsh plugins/tmux
    zgen oh-my-zsh plugins/vi-mode
    zgen oh-my-zsh plugins/z

    # This must come after the vi-mode plugin
    zgen oh-my-zsh plugins/fzf

    if [ $(uname) = Darwin ]; then
        # Load OSX-specific plugins
        zgen oh-my-zsh plugins/brew
        zgen oh-my-zsh plugins/macos
    fi

    zgen save
fi
